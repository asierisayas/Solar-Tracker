<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bruckw.usbconn.MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:text="Tilt"
        app:layout_constraintTop_toBottomOf="@+id/seekBar1"
        tools:layout_editor_absoluteX="16dp" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="371dp"
        android:layout_height="0dp"
        android:max="6144"
        tools:layout_editor_absoluteX="7dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/seekBar1" />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="371dp"
        android:layout_height="0dp"
        android:layout_marginTop="300dp"
        android:max="1500"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="7dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Pan"
        app:layout_constraintTop_toBottomOf="@+id/seekBar2"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="299dp"
        android:layout_height="195dp"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="5dp" />

    <Button
        android:id="@+id/resetBtn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="27dp"
        android:onClick="resetClick"
        android:text="Reset"
        app:layout_constraintBottom_toTopOf="@+id/seekBar1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/scanBtn"
        android:layout_width="88dp"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:layout_marginRight="27dp"
        android:onClick="autoClick"
        android:text="Auto"
        app:layout_constraintBottom_toTopOf="@+id/seekBar1"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:onClick="scanClick"
        android:text="SCAN"
        app:layout_constraintBottom_toTopOf="@+id/seekBar1"
        app:layout_constraintLeft_toRightOf="@+id/resetBtn"
        app:layout_constraintRight_toLeftOf="@+id/scanBtn" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="98dp" />
</android.support.constraint.ConstraintLayout>
